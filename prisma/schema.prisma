generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sponsorship {
  id                    String    @id @default(cuid())
  title                 String
  brandName             String
  brandLogo             String?
  contactPerson         String
  contactEmail          String
  type                  String
  description           String?
  category              String
  monetaryValue         Float
  currency              String
  paymentMethod         String
  startDate             DateTime?
  deliveryDate          DateTime
  publishDate           DateTime?
  isFlexiblePublishDate Boolean?  @default(false)
  status                String    @default("prospect")
  priority              String    @default("medium")
  notes                 String?
  attachments           String?
  progressPercentage    Float?    @default(0)
  lastActivity          DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("sponsorships")
}

model User {
  id              String   @id @default(cuid())
  name            String
  email           String   @unique
  channelName     String
  avatar          String?
  subscriberCount Int?
  verified        Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("users")
}
